<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainBranch.TuijianFragment">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/sousuo_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_search_hui"
                    android:hint="搜索"
                    android:gravity="center"
                    android:textColorHint="@color/color_999"/>
                <ImageView
                    android:id="@+id/seewho_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/sanjiao" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/vipDescription"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/huiyuan" />
                <ImageView
                    android:id="@+id/goToRoom"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/yuyin" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/seewho_tablerow"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:visibility="gone"
                android:weightSum="4"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/seeall_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="33dp"
                    android:src="@mipmap/s_all" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:id="@+id/seemale_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="33dp"
                    android:src="@mipmap/ss_boy" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:id="@+id/seefemale_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="33dp"
                    android:src="@mipmap/ss_girl" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/seewho_tablerow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="看全部"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/color333"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="只看男"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/color333"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="只看女"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/color333"
                    android:textSize="13sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/viewpager_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:tabSelectedTextColor="@color/color3"
                        app:tabIndicatorColor="@color/transparent"
                        app:tabTextColor="@color/color4"
                        app:tabIndicatorHeight="3dp"
                        app:tabMode="fixed"/>

                </LinearLayout>


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/goToRoomTwo"
            android:layout_width="129dp"
            android:layout_height="46dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="80dp"
            android:src="@mipmap/h_party" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>