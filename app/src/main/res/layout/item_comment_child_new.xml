<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingTop="6dp"
    android:paddingRight="15dp"
    android:paddingLeft="57dp"
    android:paddingBottom="6dp">


    <TextView
        android:id="@+id/if_auth_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:background="@drawable/red_round"
        android:padding="2dp"
        android:text="  作者  "
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/reply_user_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/if_auth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:padding="2dp"
        android:text="回复"
        android:textColor="@color/text_color_6"
        android:textSize="9sp"
        android:visibility="visible" />




    <TextView
        android:id="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="@id/tv_user_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="2dp"
        android:text="comment"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_14"
        android:clickable="false"
        android:background="?android:selectableItemBackground"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintStart_toEndOf="@id/iv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刚刚"
        android:textColor="@color/text_color_5"
        android:textSize="@dimen/text_size_12"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_reply"
        app:layout_constraintTop_toTopOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="回复"
        android:textColor="@color/text_color_5"
        android:textSize="@dimen/text_size_12" />
    <TextView
        android:id="@+id/ifauthlike_tv"
        app:layout_constraintTop_toTopOf="@id/tv_reply"
        app:layout_constraintStart_toEndOf="@id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_9"
        android:text="作者赞过"
        android:textSize="10sp"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/tv_content"
        android:layout_alignLeft="@+id/tv_content"
        android:layout_alignRight="@+id/tv_content"/>

    <View
        android:id="@+id/comment_relative_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="70dp"/>


    <xin.banghua.pullloadmorerecyclerview.NiceImageView
        android:id="@+id/iv_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:is_circle="true" />


    <LinearLayout
        android:id="@+id/ll_like"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_like" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:text="200"
            android:textColor="@color/text_color_8"
            android:textSize="@dimen/text_size_12"

            />

    </LinearLayout>



    <TextView
        android:id="@+id/tv_user_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_header"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/text_color_1"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/reply_user_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/reply_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:padding="2dp"
        android:text="作者"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_12"
        android:visibility="visible" />


    <View
        android:id="@+id/sub_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

