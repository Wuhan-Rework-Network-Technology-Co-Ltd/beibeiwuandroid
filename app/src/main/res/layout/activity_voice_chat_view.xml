<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.VoiceChatViewActivity"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/activity_voice_chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/authportrait"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginBottom="70dp"
                android:src="@mipmap/question_icon" />

            <TextView
                android:id="@+id/prompt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="等待接通中..."
                android:textColor="@color/colorGray2"
                android:textSize="16sp" />

            <Chronometer
                android:id ="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:format="%s"
                android:textSize="80px"
                android:textColor="@color/colorGray2"
                android:visibility="gone"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quick_tips_when_use_agora_sdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="40dp"
                android:gravity="center_vertical|start"
                android:text="1. Default channel name is voiceDemoChannel1\n2. Waiting for remote users\n3. This demo only supports 1v1 voice calling"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_mute"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:onClick="onLocalAudioMuteClicked"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_mute"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:onClick="onEndCallClicked"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_end_call" />

                <ImageView
                    android:id="@+id/btn_speaker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:onClick="onSwitchSpeakerphoneClicked"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_speaker"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/follow_gift_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="150dp"
            android:layout_marginBottom="24dp">


            <ImageView
                android:id="@+id/btn_report_violation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_report_violation"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/btn_gift"
                android:layout_below="@+id/btn_report_violation"
                android:layout_marginTop="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gift_icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/btn_follow"
                android:layout_below="@+id/btn_gift"
                android:layout_marginTop="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plus_red"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/btn_rock_paper_scissors"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btn_follow"
                android:layout_marginTop="15dp"
                android:src="@drawable/rock_paper_scissors_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ie_browser_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="10dp">
            <ImageView
                android:id="@+id/zoom_icon"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_zoom_icon"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
