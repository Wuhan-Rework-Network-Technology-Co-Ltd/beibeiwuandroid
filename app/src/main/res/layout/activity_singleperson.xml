<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personage.PersonageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＜"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:textColor="@color/color333"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/color333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_az"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <xin.banghua.beiyuan.CircleImageViewExtension
                            android:id="@+id/user_portrait"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/logo"
                            android:layout_gravity="center"/>

                        <io.agora.chatroom.util.PortraitFrameView
                            android:id="@+id/portraitFrameView"
                            android:layout_width="66dp"
                            android:layout_height="66dp" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/vip_gray"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-15dp"
                        android:src="@mipmap/nian" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加载失败，请重试"
                            android:textStyle="bold"
                            android:textColor="@color/color333"
                            android:textSize="17sp" />
                        <ImageView
                            android:id="@+id/lv_img"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_margin="3dp"
                            android:src="@mipmap/lv1"/>
                        <ImageView
                            android:id="@+id/rp_verify_img"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/ic_rp_verify"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/online_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:layout_alignParentRight="true"
                                android:text="在线"
                                android:textSize="12sp"
                                android:textColor="@color/gray_light"/>
                            <ImageView
                                android:id="@+id/online_img"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/green_point"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_age"
                            android:layout_width="33dp"
                            android:layout_height="15dp"
                            android:background="@mipmap/h_sex"
                            android:drawableLeft="@mipmap/ggirl"
                            android:paddingLeft="3dp"
                            android:text=" 26"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/user_property"
                            android:layout_width="22dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/yuan_type"
                            android:gravity="center"
                            android:text="双"
                            android:textColor="@color/color_white"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/xin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginLeft="-30dp"
                            android:text=" 100"
                            android:textColor="@color/color_level"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="地址"
                        android:textColor="@color/color_site"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/follow_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注：0"
                            android:textSize="12sp"/>
                        <View
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/fans_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝：0"
                            android:textSize="12sp"/>


                        <TextView
                            android:id="@+id/id_tv"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="乐园id:0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/text_color_5"
                            android:layout_marginRight="5dp"
                            android:textSize="12sp"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_signature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="签名"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_site"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/all_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/user_tiezi"
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/tadetiez"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="他(她)的帖子"
                    android:textColor="@color/color333"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_blacklist"
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/jiaruheimingdan"/>
                <TextView
                    android:id="@+id/add_blacklist_tv"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="加入黑名单"
                    android:textColor="@color/color333"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/tadeguanzhu"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="他(她)的关注"
                    android:textColor="@color/color333"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/tadefensi"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="他(她)的粉丝"
                    android:textColor="@color/color333"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/tadeshoucang"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="他(她)的收藏"
                    android:textColor="@color/color333"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/join_room_btn"
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/jinruliaotianshi"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="进入聊天室"
                    android:textColor="@color/color333"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>
            </LinearLayout>



            <Button
                android:id="@+id/make_friend_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/tjhy_10"
                android:text="申请好友"
                android:textColor="@color/text_color_8"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/make_follow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_10"
                android:text="关注（互关自动成为好友）"
                android:textColor="@color/text_color_4"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/svip_chat_btn"
                android:layout_margin="15dp"
                android:text="直接聊天"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/zjlt_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/color_zjlt"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通svip会员可免去添加好友过程直接发起聊天"
                    android:textColor="@color/color_999"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>


            <Button
                android:id="@+id/start_conversation"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rc_btn_voice_hover"
                android:drawableTop="@drawable/ic_startconversation"
                android:text="发起聊天"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#CA2F7D"
                android:visibility="gone" />


            <Button
                android:id="@+id/move_friendapply"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rc_btn_voice_hover"
                android:text="撤销申请（会员功能）"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />


            <Button
                android:id="@+id/delete_friend"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rc_btn_voice_hover"
                android:drawableTop="@drawable/ic_deletefriend"
                android:text="删除好友"
                android:textColor="@color/callkit_normal_text"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/make_friend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:background="@drawable/bg_az"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/leave_words"
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="向TA介绍一下你自己吧！"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/make_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/tjhy_10"
                    android:text="开始申请"
                    android:textColor="@color/color_zjlt"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/make_friend_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/tjhy_10"
                    android:text="赠送礼物并置顶"
                    android:textColor="@color/color_zjlt"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/make_friend_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/text_color_5"
                android:text="取消"
                android:textColor="@color/text_color_2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:alpha="0.5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sent_gift_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:spanCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/image_text_view"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
