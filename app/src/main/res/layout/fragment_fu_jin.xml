<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainBranch.TuijianFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/sousuo_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/bg_search_hui"
                android:hint="搜索"
                android:gravity="center"
                android:textColorHint="@color/color_999"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/vipDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/huiyuan" />
            <ImageView
                android:id="@+id/goToRoom"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/yuyin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tuijian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精华"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/color8a"/>
            <TextView
                android:id="@+id/fujin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近"
                android:paddingTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/color333"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/seewho_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/sanjiao" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seewho_tablerow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/seeall_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@mipmap/nannv" />
            <ImageView
                android:id="@+id/seemale_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@mipmap/nan" />
            <ImageView
                android:id="@+id/seefemale_btn"
                android:paddingLeft="18dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@mipmap/nv" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seewho_tablerow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="看全部"
                android:gravity="center"
                android:textColor="@color/color333"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="只看男"
                android:gravity="center"
                android:textColor="@color/color333"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="只看女"
                android:gravity="center"
                android:textColor="@color/color333"
                android:textSize="13sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
                android:id="@+id/tuijian_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="12" />

            <ImageView
                android:id="@+id/goToRoomTwo"
                android:layout_width="129dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="80dp"
                android:src="@mipmap/h_party" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>