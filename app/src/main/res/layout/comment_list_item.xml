<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_item_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <xin.banghua.pullloadmorerecyclerview.NiceImageView
            android:id="@+id/portrait_niv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            app:is_circle="true"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/nickname_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/portrait_niv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="nickname"
            android:textSize="16sp"
            android:textColor="@color/text_color_3"/>



        <TextView
            android:id="@+id/comment_tv"
            app:layout_constraintBottom_toBottomOf="@id/portrait_niv"
            app:layout_constraintStart_toEndOf="@id/portrait_niv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="呵呵，你好"
            android:textSize="18sp"
            android:textColor="@color/text_color_1"
            />

        <LinearLayout
            android:id="@+id/other_linear"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/portrait_niv"
            app:layout_constraintStart_toEndOf="@id/portrait_niv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复了你的评论"
                android:textSize="14sp"
                android:textColor="@color/text_color_5"
                />
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="2021 10 1"
                android:textSize="14sp"
                android:textColor="@color/text_color_5"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/post_title_tv"
            app:layout_constraintTop_toBottomOf="@id/other_linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="原贴：你好"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:textColor="@color/text_color_3"
            android:background="@drawable/shape_property"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>