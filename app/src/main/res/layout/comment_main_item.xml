<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/text_color_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/comment_relative_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/rl_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp">

            <!--头像-->
            <xin.banghua.pullloadmorerecyclerview.NiceImageView
                android:id="@+id/iv_header"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:is_circle="true"
                />

            <!--点赞-->
            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:text="200"
                    android:textColor="@color/text_color_8"
                    android:textSize="@dimen/textSize"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ll_like"
                android:layout_toRightOf="@+id/iv_header">
                <!--用户名-->
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="name"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/sight_text_size_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/if_auth_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/red_round"
                    android:padding="2dp"
                    android:text="  作者  "
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:visibility="visible" />
            </LinearLayout>



            <!--评论内容-->
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_user_name"
                android:layout_alignLeft="@+id/layout_user_name"
                android:layout_alignRight="@+id/layout_user_name"
                android:layout_marginTop="3dp"
                android:lineSpacingExtra="2dp"
                android:text="comment"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_12" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_content"
                android:layout_alignLeft="@+id/tv_content"
                android:layout_alignRight="@+id/tv_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="刚刚"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/text_size_12" />
                <TextView
                    android:id="@+id/tv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="回复"
                    android:textColor="@color/text_color_5"
                    android:textSize="@dimen/text_size_12" />
                <TextView
                    android:id="@+id/ifauthreply_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/text_color_9"
                    android:text="作者回复过"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/ifauthlike_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_6"
                    android:text="作者赞过"
                    android:textSize="10sp"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>

        <!--二级评论-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subcomment_recycler_view"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/rl_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/sub_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_group"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/collapse_tv"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_comment_layout"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_color_6"
            android:text="--展开"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>