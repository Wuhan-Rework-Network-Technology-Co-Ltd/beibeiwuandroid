<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Branch.FabudongtaiFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/dongtai_word"
                style="@style/AlertDialog.AppCompat.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_span="3"
                android:ems="10"
                android:hint="这一刻的想法"
                android:inputType="textPersonName"
                android:textAlignment="viewStart" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dongtai_image1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                app:srcCompat="@drawable/plus"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/dongtai_image2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/plus"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/dongtai_image3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/plus"
                tools:src="@tools:sample/avatars" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_span="3"
                android:text="是否在广场页展示?" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/guangchang_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_span="3"
                android:checkedButton="@+id/yes_rb"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/yes_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/no_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="否" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/release_btn"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:text="发布动态" />
        </TableRow>

    </TableLayout>
</FrameLayout>