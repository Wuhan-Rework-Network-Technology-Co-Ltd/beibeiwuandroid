<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/script_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_against">

    <ImageView
        android:id="@+id/script_cover_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/logo"/>


    <TextView
        android:id="@+id/script_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/script_cover_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_color_4"
        android:text=""/>


    <TextView
        app:layout_constraintTop_toBottomOf="@id/script_name_tv"
        app:layout_constraintStart_toEndOf="@id/script_cover_img"
        android:id="@+id/script_singer_tv"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_2"
        android:textSize="16sp"
        android:text=""/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/script_cover_img"
        app:layout_constraintStart_toStartOf="@id/script_cover_img"
        android:id="@+id/script_description_tv"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_2"
        android:textSize="16sp"
        android:text=""/>



    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_py"
        android:textColor="@color/text_color_1"
        android:padding="15dp"
        android:text="去配音"/>

</androidx.constraintlayout.widget.ConstraintLayout>