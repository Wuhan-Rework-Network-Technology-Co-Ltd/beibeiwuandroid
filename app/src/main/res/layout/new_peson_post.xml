<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/authportrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/rentou"
                    android:layout_gravity="center"/>

                <io.agora.chatroom.util.PortraitFrameView
                    android:id="@+id/portraitFrameView"
                    android:layout_width="66dp"
                    android:layout_height="66dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/follow_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                android:src="@mipmap/plus_circle_fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/authnickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="别爱我没结果"
                    android:textColor="@color/color333"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/vip_gray"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/nian" />

                <ImageView
                    android:id="@+id/lv_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:src="@mipmap/lv1"/>


                <ImageView
                    android:id="@+id/rp_verify_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_rp_verify"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/menu_btn"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_threepoints" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userAge"
                    android:layout_width="33dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/h_sex"
                    android:drawableLeft="@mipmap/ggirl"
                    android:paddingLeft="3dp"
                    android:text=" 26"
                    android:textColor="@color/color_white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/userProperty"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:background="@mipmap/h_type"
                    android:gravity="center"
                    android:text="双"
                    android:textColor="@color/color_white"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/xin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-30dp"
                    android:text="  100"
                    android:textColor="@color/color_level"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/online_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:text="在线"
                    android:textSize="11sp"
                    android:textColor="@color/gray_light"/>
                <ImageView
                    android:id="@+id/online_img"
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/green_point"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/userRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:text="地址"
                    android:textColor="@color/color_site"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:text="12：00"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_999"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/posttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/rc_ext_root_menu_item_text_color" />

            <Button
                android:id="@+id/detail_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全文"
                android:textColor="@color/callkit_color_primary" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview"
                tools:listitem="@layout/picture_item0"
                app:spanCount="3"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>


            <xin.banghua.beiyuan.custom_ui.CustomVideoView
                android:id="@+id/player"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone" />

            <xin.banghua.beiyuan.custom_ui.NiceZoomImageView
                android:id="@+id/postpicture"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginRight="3dp"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:corner_radius="10dp"/>

            <xin.banghua.beiyuan.custom_ui.NiceZoomImageView
                android:id="@+id/postpicture1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:corner_radius="10dp"/>

            <xin.banghua.beiyuan.custom_ui.NiceZoomImageView
                android:id="@+id/postpicture2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:corner_radius="10dp"/>

            <xin.banghua.beiyuan.custom_ui.NiceZoomImageView
                android:id="@+id/postpicture3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:corner_radius="10dp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/video_layout"
            android:layout_width="0dp"
            android:layout_gravity="left"
            android:layout_height="0dp">
            <xin.banghua.beiyuan.custom_ui.NiceImageView
                android:id="@+id/cover_view"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:corner_radius="10dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/film_cover_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/video_play_normal"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/cover_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"/>
        </FrameLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="360dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/topic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/posttip"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/jiajing_bg_1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="精华"
            android:textColor="@color/color_white"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/posttop"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/jiajing_bg"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <ImageView
                android:paddingTop="5dp"
                android:paddingLeft="8dp"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@mipmap/zhiding"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="置顶"
                android:paddingRight="8dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="12sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/comment_tv_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/g_pinglun"/>
                    <TextView
                        android:id="@+id/comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/color333"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/like_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/like_img"
                        android:layout_marginLeft="30dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/dianzanweidianji"/>
                    <TextView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="56"
                        android:textColor="@color/color333"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/goToRoomBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="招募令(进入房间)"
        android:layout_margin="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/red_round"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:layout_marginTop="5dp"/>
</LinearLayout>