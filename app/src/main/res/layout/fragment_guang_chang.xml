<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Branch.LuntanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <TextView
                    android:id="@+id/toggleButton11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="推荐"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
                <TextView
                    android:id="@+id/toggleButton12"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="同城"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/toggleButton13"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="最新"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/toggleButton14"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="招募令"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/toggleButton15"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="关注"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>


                <RelativeLayout
                    android:id="@+id/luntanRelease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/yellow_shixin_yuanjiao"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:src="@mipmap/fabu"/>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_white"
                            android:text="发布"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/toggleButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="动态"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/toggleButton2"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="自拍"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/toggleButton3"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="真实"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/toggleButton4"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="情感"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/toggleButton5"
                    android:paddingTop="4dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333"
                    android:text="精华"
                    android:layout_gravity="bottom"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/transparent"/>

        <xin.banghua.beiyuan.MarqueeTextView
            android:id="@+id/marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:visibility="gone"/>

        <Button
            android:id="@+id/search_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:background="@drawable/bg_py"
            android:hint="搜索"
            android:gravity="center"
            android:textColorHint="@color/color_999"/>

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/luntan_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5" />
    </LinearLayout>

    <Button
        android:id="@+id/look_just_btn"
        android:layout_gravity="right|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="刚刚看过↓"/>
</FrameLayout>