<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".match.MatchActivity"
    android:background="@mipmap/match_bg">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:src="@drawable/back_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="属性匹配"
            android:textColor="@color/text_color_4"
            android:textAlignment="center"/>
    </FrameLayout>


    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/online_num_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_4"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:text="匹配倾向" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_5"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:text="完善资料，提高匹配度" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/online_num_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/online_match_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_4"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:text="当前6879人正在匹配" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tip_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/match_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginBottom="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_5"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:text="tips:实名认证，高等级可提升匹配成功率" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/match_btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="80dp"
        android:padding="5dp"
        android:weightSum="3">

        <FrameLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/online_match"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@mipmap/online_match_btn"/>
            <TextView
                android:id="@+id/online_match_times_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:textColor="@color/text_color_4"
                android:text="剩余次数5\n2级后无限"/>
        </FrameLayout>


        <FrameLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/voice_match"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@mipmap/voice_match_btn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:textColor="@color/text_color_4"
                android:text=""/>
        </FrameLayout>

        <FrameLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/video_match"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@mipmap/video_match_btn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:textColor="@color/text_color_4"
                android:text=""/>
        </FrameLayout>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation"/>


    <FrameLayout
        android:id="@+id/match_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/match_love"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:src="@drawable/match_loading"/>

            <com.faceunity.nama.ui.CircleImageView
                android:id="@+id/portrait_two"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/logo"
                android:visibility="gone"/>

            <com.faceunity.nama.ui.CircleImageView
                android:id="@+id/portrait_one"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="40dp"
                android:src="@mipmap/logo"
                android:visibility="gone"/>
        </androidx.cardview.widget.CardView>




    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>