<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/haoyou_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userID"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/authportrait_framelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <xin.banghua.beiyuan.CircleImageViewExtension
                    android:id="@+id/authportrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher" />

                <io.agora.chatroom.util.PortraitFrameView
                    android:id="@+id/portraitFrameView"
                    android:layout_width="66dp"
                    android:layout_height="66dp" />
            </FrameLayout>
            <ImageView
                android:id="@+id/vip_gray"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_vip_gray" />

            <ImageView
                android:id="@+id/vip_diamond"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_vip_diamond" />

            <ImageView
                android:id="@+id/vip_black"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_vip_black" />

            <ImageView
                android:id="@+id/vip_white"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_vip_white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/userNickName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:text="userNickName"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userAttribtes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/userLeaveWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userLeaveWords"
                android:textColor="@color/rc_ext_root_menu_item_text_color"
                tools:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/userinfo_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableTop="@drawable/ic_person" />

    </LinearLayout>

</RelativeLayout>