<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_sime_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow_black"/>

        <ImageView
            android:id="@+id/more_menu"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_threepoints"/>

    </FrameLayout>


    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/back_layout"
        android:id="@+id/userinfo_layout"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <xin.banghua.beiyuan.CircleImageViewExtension
                        android:id="@+id/user_portrait"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/logo"
                        android:layout_gravity="center"/>

                    <io.agora.chatroom.util.PortraitFrameView
                        android:id="@+id/portraitFrameView"
                        android:layout_width="66dp"
                        android:layout_height="66dp" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/vip_gray"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-15dp"
                    android:src="@mipmap/nian" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:id="@+id/user_nickname"
                        android:layout_width="wrap_content"
                        android:maxWidth="150dp"
                        android:layout_height="wrap_content"
                        android:text="加载失败，请重试"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_4"
                        android:textSize="16sp" />
                    <ImageView
                        android:id="@+id/lv_img"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:src="@mipmap/lv1"/>
                    <ImageView
                        android:id="@+id/rp_verify_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/ic_rp_verify"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:shadowColor="@color/black"
                            android:shadowRadius="1"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:id="@+id/online_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"
                            android:layout_alignParentRight="true"
                            android:text="在线"
                            android:textSize="12sp"
                            android:textColor="@color/text_color_4"/>
                        <ImageView
                            android:id="@+id/online_img"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/green_point"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_age"
                        android:layout_width="33dp"
                        android:layout_height="15dp"
                        android:background="@mipmap/h_sex"
                        android:drawableLeft="@mipmap/ggirl"
                        android:paddingLeft="3dp"
                        android:text=" 26"
                        android:textColor="@color/color_white"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/user_property"
                        android:layout_width="22dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/yuan_type"
                        android:gravity="center"
                        android:text="双"
                        android:textColor="@color/color_white"
                        android:textSize="11sp" />

                    <io.agora.chatroom.util.WealthAndGlamour
                        android:id="@+id/wealth_view"
                        android:layout_width="48dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="8dp"/>

                    <io.agora.chatroom.util.WealthAndGlamour
                        android:id="@+id/glamour_view"
                        android:layout_width="48dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:id="@+id/user_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="地址"
                        android:textColor="@color/text_color_4"
                        android:textSize="12sp" />


                    <TextView
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="距离"
                        android:textColor="@color/text_color_4"
                        android:textSize="12sp" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:id="@+id/follow_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_4"
                        android:text="关注：0"
                        android:textSize="12sp"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:id="@+id/fans_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝：0"
                        android:textColor="@color/text_color_4"
                        android:textSize="12sp"/>


                    <TextView
                        android:shadowColor="@color/black"
                        android:shadowRadius="1"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:id="@+id/id_tv"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乐园id:0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/text_color_4"
                        android:layout_marginRight="5dp"
                        android:textSize="12sp"
                        android:visibility="visible"/>
                </LinearLayout>

                <TextView
                    android:shadowColor="@color/black"
                    android:shadowRadius="1"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:id="@+id/user_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="签名"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_color_4"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/goToRoom"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:src="@mipmap/goto_room_icon"/>

                    <ImageView
                        android:id="@+id/follow_img"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:src="@mipmap/follow_icon"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/hold_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/round_sime_white"
        app:layout_constraintTop_toBottomOf="@id/userinfo_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <TextView
        app:layout_constraintTop_toBottomOf="@id/hold_view"
        android:id="@+id/no_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="ta还没有发布过动态"
        android:textColor="@color/text_color_1"
        android:background="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>