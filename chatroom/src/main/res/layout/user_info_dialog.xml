<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_color_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_6"
                android:text="name"/>

            <TextView
                android:id="@+id/tv_age"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_age_female"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_property"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_property"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/follow_fans_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/name_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_favoritenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="-"
                android:textSize="16sp"
                android:textColor="@color/text_color_4"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="关注"
                android:textSize="12sp"
                android:textColor="@color/text_color_4"
                android:layout_marginLeft="2dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tv_fansnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="-"
                android:textSize="16sp"
                android:textColor="@color/text_color_4"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="粉丝"
                android:textSize="12sp"
                android:textColor="@color/text_color_4"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="签名"
            android:textColor="@color/text_color_6"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/follow_fans_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_sign">

            <Button
                android:id="@+id/follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_8"
                android:text="关注"
                android:visibility="gone"/>

            <Button
                android:id="@+id/at_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_9"
                android:text="\@ta"
                android:visibility="gone"/>

            <Button
                android:id="@+id/person_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:background="@drawable/round_gradient_blue"
                android:textColor="@color/text_color_4"
                android:text="主页"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <xin.banghua.pullloadmorerecyclerview.NiceImageView
        android:id="@+id/portrait_niv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        app:is_circle="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/gift_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="送礼"
        android:padding="3dp"
        android:textColor="@color/text_color_1"
        android:textSize="14sp"
        android:background="@drawable/round_black_normal"
        android:drawableLeft="@mipmap/ic_gift"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>