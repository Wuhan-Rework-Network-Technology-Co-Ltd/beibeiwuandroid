<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="5dp"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="充值"
        android:textColor="@color/text_color_1"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/remainder_money"
        android:text="余额：10乐园币"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/first_low"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/remainder_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/pay_item_1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1乐园币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1元"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_item_2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6乐园币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6元"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_item_3"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30乐园币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30元"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_low"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/first_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/pay_item_4"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98乐园币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98元"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_item_5"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="298乐园币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="298元"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_item_6"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="518乐园币"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="518元"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pay_confirm_btn"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/second_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即充值"
        android:background="@drawable/gift_pay_btn_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>