<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    tool:ignore="MissingDefaultResource"
    android:layout_margin="3dp">

    <io.agora.chatroom.util.NiceZoomImageView
        android:id="@+id/picture_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:corner_radius="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/plus"/>

    <ImageView
        android:id="@+id/delete_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/picture_img"
        app:layout_constraintEnd_toEndOf="@id/picture_img"
        android:src="@mipmap/delete_circle"
        android:layout_margin="10dp"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>