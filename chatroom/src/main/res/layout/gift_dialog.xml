<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    android:background="@color/transparent">

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/iv_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.opensource.svgaplayer.SVGAImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/gift_player"
        android:layout_height="844dp"
        android:layout_width="match_parent"
        app:autoPlay="true"
        app:loopCount="1"
        android:background="@color/transparent" />



    <LinearLayout
        android:id="@+id/select_receiver_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/remainder_money_layout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/xingzhuang">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送 "
            android:textColor="@color/text_color_4"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/receiver_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/text_color_2"
            android:text="  张三"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 换人 >"
            android:textColor="@color/text_color_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remainder_money_layout"
        app:layout_constraintBottom_toTopOf="@id/gift_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gift_dialog_bg">
        <TextView
            android:id="@+id/remainder_money_tv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_color_4"
            android:text="余额：100乐园币"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/recharge_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="@color/text_color_10"
            android:background="@drawable/corner_gray_bg"
            android:text="充值"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/gift_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:listitem="@layout/item_gift_selected"
        app:spanCount="4"
        android:background="@color/gift_dialog_bg"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/zhegaiceng"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/broadcaster_card"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择1位用户送礼"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="18sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/broadcaster_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                tools:listitem="@layout/item_chatroom_broadcaster"
                app:spanCount="4"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">
        <include
            layout="@layout/item_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>



    <include
        layout="@layout/item_pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />


    <io.agora.chatroom.widget.GiftPopView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/giftPopView"
        android:layout_width="match_parent"
        android:layout_height="844dp"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>