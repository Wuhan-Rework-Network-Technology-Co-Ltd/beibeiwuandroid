<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="66dp"
    android:layout_height="66dp"
    android:clipChildren="false">
    <FrameLayout
        android:id="@+id/iv_seat_layout"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:gravity="center">
        <io.agora.chatroom.widget.SpreadView
            android:id="@+id/view_anim"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_seat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_seat_item"
            android:src="@mipmap/ic_join" />
        <io.agora.chatroom.util.PortraitFrameView
            android:id="@+id/portraitFrameView"
            android:layout_width="66dp"
            android:layout_height="66dp" />
    </FrameLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mute"
        android:layout_width="@dimen/item_mute_size"
        android:layout_height="@dimen/item_mute_size"
        android:layout_alignEnd="@id/iv_seat_layout"
        android:layout_alignBottom="@id/iv_seat_layout"
        android:src="@mipmap/ic_mic_off_little" />


    <TextView
        android:id="@+id/tv_property"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape_age_female"
        android:text="Z"
        android:gravity="center"
        android:textColor="@color/text_color_4"
        android:textSize="6sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/is_anchor"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="房主"
        android:gravity="center"
        android:background="@drawable/shape_property"
        android:textColor="@color/text_color_6"
        android:textSize="8sp" />
</RelativeLayout>
