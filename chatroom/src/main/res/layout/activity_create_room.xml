<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoomActivity">

    <ImageView
        android:id="@+id/back_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow_black"/>




    <LinearLayout
        android:id="@+id/first_linear"
        app:layout_constraintTop_toBottomOf="@id/back_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/create_room_ktv"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/back_img"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/create_room_ktv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一起K歌"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_room_film"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/create_room_ktv"
            app:layout_constraintEnd_toStartOf="@id/create_room_cp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/create_room_film"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一起看电影"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_room_cp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/create_room_film"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/create_room_cp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="处cp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_linear"
        app:layout_constraintTop_toBottomOf="@id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/create_room_five_chess"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/create_room_ktv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/create_room_draw_guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/create_room_five_chess"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="五子棋"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_room_draw_guess"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/create_room_ktv"
            app:layout_constraintStart_toEndOf="@id/create_room_five_chess"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/create_room_draw_guess"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你画我猜"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/recruitment_btn"
        app:layout_constraintTop_toBottomOf="@id/second_linear"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="招募令" />

    <Button
        android:id="@+id/room_set_btn"
        app:layout_constraintTop_toBottomOf="@id/second_linear"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间设置" />
</androidx.constraintlayout.widget.ConstraintLayout>